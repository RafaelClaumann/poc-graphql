type Post {
    id: ID!
    subject: PostSubject
    content: String!
    comments: [Comment]
}

enum PostSubject {
    TECH,
    JOB,
    FUNNY,
    OTHER
}

interface Comment {
    id: ID!
    content: String!
    postId: String!
}

type TextComment implements Comment {
    id: ID!
    content: String!
    postId: String!
}

type ImageComment implements Comment {
    id: ID!
    content: String!
    imageUrl: String!
    postId: String!
}

type Query {
    postById(id: ID!) : Post
    getPosts(subject: PostSubject): [Post]

    commentById(id: ID!): Comment
    getComments: [Comment]
}

type Mutation {
    createPost(subject: PostSubject, content: String!): Post
    createComment(content: String!, imageUrl: String, postId: String!): [Comment]
}
